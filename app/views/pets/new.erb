<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
    <label>Name:</label>
    <br>
    <input type="text" id="pet_name" name="pet[name]">

    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
        <% @owners.each do |owner| %>
            <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>">
            <%= owner.name %><br>
        <% end %>
        
    <h3>New Owner</h3>
    <input type="text" id="owner_name" name="owner[name]">
    <br><br>
    
    <input type="submit" value="Create Pet">
</form>