<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <label>Edit Pet's Name: </label>
        <br>
        <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
        <br><br>

        <h3>Existing Owners</h3>
        <% Owner.all.each do |owner| %>
            <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"
            <%='checked' if @pet.owner == owner %> /><%= owner.name %>
            <br>
        <% end %>
        <br>

        <h3>New Owner</h3>
        <label>Owner Name: </label>
        <br>
        <input type="text" name="owner[name]" id="owner_name" />
        <br><br>

        <input type="submit" value="Update Pet">
</form>